        Rectangle:
            pos: self.pos
            size: self.size
    RecycleBoxLayout:
        md_bg_color: get_color_from_hex("#121212")
        #cols: 1
        default_size: dp(75), dp(50)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        #orientation: 'lr-tb' 
        orientation: "vertical"
        spacing: 2
        #padding: 1,1,1,1

<NodeRV2>: 
