#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#: import get_color_from_hex kivy.utils.get_color_from_hex


WindowManager:

<PreLoadWindow>:
    name: "preload"
    status_text: "Loading..."
    title: app.title
   
    MDFloatLayout:
        md_bg_color: 0,0,0,1
    
        Image:
            source: root.get_logo()
            size_hint: 1, None
            size: 500, 500
            pos_hint: {"x": 0, "y": .275}
            # size: self.texture_size[0] / 2, self.texture_size[1] / 2
            # opacity: 0.1
        
        MDLabel:
            id: status_label
            bold: True
            text: root.status_text
            color: 1,1,1,1
            halign: "center"
            pos_hint: {"center_x" : .5, "y" : -.3}
    
        MDRaisedButton:
            id: go_button
            opacity: 0
            disabled: True
            text: "Let's Go"
            pos_hint: {"center_x" : .5, "y" : .05}
            on_press: root.switch_window()

<MainWindow>:
    name: "main"
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: get_color_from_hex("#0d021b")
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: .15
            MDTextField:
                hint_text: "IP Address"
                id: new_ip
                mode: "fill"
                width: "200dp"
                haline: "center"
                size_hint_x: 1.2
                pos_hint: {"center_x" : .5, "center_y": .5}                
                text: ""
                readonly: True
                opacity: 1
                theme_text_color: "Custom"
                text_color: get_color_from_hex("#fcb711")
                normal_color: app.theme_cls.accent_color      
                
            Image:
                source: root.get_logo()
                size_hint: None, None
                height: "75dp"
                pos_hint_x: 1
        


        MDTabs:
            id: android_tabs
            on_tab_switch: root.on_tab_switch(*args)
            size_hint_y: None
            height: "48dp"
            tab_indicator_anim: True
            color: 1,1,1,1
            normal_color: get_color_from_hex("#fcb711")
            background_color: get_color_from_hex("#fcb711")
        
        
        NodeRV:
            md_bg_color: get_color_from_hex("#0d021b")    
            id: rv
        
        MDBottomNavigation:
            size_hint_y: .1
            panel_color: get_color_from_hex("#0d021b")
            text_color_normal: get_color_from_hex("#fcb711")
            MDBottomNavigationItem:
                name: "lan_disconnect"
                text: "Disconnect"
                icon: "lan-disconnect"

                on_tab_release: root.disconnect_from_node()
                
            MDBottomNavigationItem:
                name: "wallet"
                text: "Wallet"
                icon: "wallet"
                on_tab_release: root.wallet_dialog()
                
            MDBottomNavigationItem:
                name: "help"
                text: "Help"
                icon: "account-question"
                on_tab_release: root.build_help_screen_interface()
                
    
            
<NodeScreen>
    name: "nodes"
    MDBoxLayout:
        orientation: "vertical"
        NodeRV:
            id: rv
    ActionBar:
        background_normal: ''
        background_down: ''
        background_color: get_color_from_hex("#0d021b")
        ActionView:
            ActionPrevious:
                icon: "arrow-left-circle"
                title: 'Go Back'
                with_previous: True
                on_release: root.set_previous_screen() 
    
