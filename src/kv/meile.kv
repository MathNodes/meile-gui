<BandwidthBar@MDProgressBar>
    id: quota
    value: 0
    color: app.theme_cls.primary_color
    back_color: 0,0,0,.3
    pos_hint: {"x" : .1, "center_y" : .035 }
    size_hint_x: .45
    size_hint_y: None
    height:dp(4)                                   
    canvas:

        Color: 
            rgba: 0,0,0,.3
        BorderImage:
            border: (dp(4), dp(4), dp(4), dp(4))
            pos: self.x, self.center_y - dp(2)
            size: self.width, dp(4)
        Color:
            rgba: get_color_from_hex(MeileColors.MEILE)                        
        BorderImage:
            border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, dp(4)))] * 4
            pos: self.x, self.center_y -dp(2)
            size: self.width * (self.value / float(self.max)) if self.max else 0, dp(4)
    
