                pos_hint: {"x" : 0, "top" : 1.1}
            MDLabel:
                text: root.price_text
                theme_text_color: "Custom"
                font_style: "Subtitle2"
                font_size: "13sp"
                text_color: get_color_from_hex("#fcb711")
                pos_hint: {"x" : 0, "top" : .85}
                
            Image:
                source: root.source_image
                # {"x", "y", "top", "bottom", "left", "right" }
